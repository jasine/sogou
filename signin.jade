		link(rel='stylesheet', type='text/css', href='css/lib/font-awesome.css')
		// this page specific styles
		link(rel='stylesheet', href='css/compiled/signin.css', type='text/css', media='screen')
		// open sans font
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
		//if lt IE 9
			script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
	body
		// background switcher
		.bg-switch.visible-desktop
			.bgs
				a.bg.active(href='#', data-img='landscape.jpg')
					img(src='img/bgs/landscape.jpg')
				|             
				a.bg(href='#', data-img='blueish.jpg')
					img(src='img/bgs/blueish.jpg')
				|             
				|             
				a.bg(href='#', data-img='7.jpg')
					img(src='img/bgs/7.jpg')
				|             
				a.bg(href='#', data-img='8.jpg')
					img(src='img/bgs/8.jpg')
				|             
				a.bg(href='#', data-img='9.jpg')
					img(src='img/bgs/9.jpg')
				|             
				a.bg(href='#', data-img='10.jpg')
					img(src='img/bgs/10.jpg')
				|             
				a.bg(href='#', data-img='11.jpg')
					img(src='img/bgs/11.jpg')
		|     
		.login-wrapper
			a(href='index.html')
				img.logo(src='img/logo-white.png')
			|         
			.box
				.content-wrap
					h6 登录
					|                 
					input.form-control(type='text', placeholder='邮箱地址')
					|                 
					input.form-control(type='password', placeholder='密码')
					|                 
					.remember
						input#remember-me(type='checkbox')
						|                     
						label(for='remember-me') 记住密码
					|                 
					a.btn-glow.primary.login(href='index.html') 登录
		// scripts
		script(src='http://code.jquery.com/jquery-latest.js')
		|     
		script(src='js/bootstrap.min.js')
		|     
		script(src='js/theme.js')
		// pre load bg imgs
		script(type='text/javascript').
			$(function () {
			// bg switcher
			var $btns = $(".bg-switch .bg");
			$btns.click(function (e) {
			e.preventDefault();
			$btns.removeClass("active");
			$(this).addClass("active");
			var bg = $(this).data("img");
			$("html").css("background-image", "url('img/bgs/" + bg + "')");
			});
			});
